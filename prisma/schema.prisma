// Prisma schema for Content Curation Platform

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication and preferences
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts      Account[]
  sessions      Session[]
  preferences   UserPreferences?
  socialAccounts SocialAccount[]
  drafts        Draft[]

  @@map("users")
}

// NextAuth Account model
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// NextAuth Session model
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// User preferences and topic selections
model UserPreferences {
  id                String   @id @default(cuid())
  userId            String   @unique
  topics            String[] // Array of selected topics (AI, ML, funding, etc.)
  feedFrequency     String   @default("daily") // daily, hourly, realtime
  autoPostEnabled   Boolean  @default(false)
  emailNotifications Boolean @default(true)
  selectedPlatforms String[] @default([]) // Platforms to auto-post: twitter, linkedin, facebook
  postsPerPlatform  Int      @default(6) // Number of posts per platform per cycle
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_preferences")
}

// Social media account connections
model SocialAccount {
  id            String   @id @default(cuid())
  userId        String
  platform      String   // twitter, linkedin, facebook, etc.
  accountName   String
  accessToken   String?
  refreshToken  String?
  tokenExpiry   DateTime?
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, platform])
  @@map("social_accounts")
}

// RSS Feed sources
model Feed {
  id          String   @id @default(cuid())
  name        String
  url         String   @unique
  category    String   // news, jobs, funding, ai-ml, etc.
  topics      String[] // Array of topics this feed covers
  isActive    Boolean  @default(true)
  lastFetched DateTime?
  fetchInterval Int    @default(3600) // seconds
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  content     Content[]

  @@map("feeds")
}

// Content items from feeds
model Content {
  id              String   @id @default(cuid())
  feedId          String
  title           String
  description     String?
  content         String?  @db.Text
  url             String   @unique
  author          String?
  publishedAt     DateTime?
  categories      String[] // Array of categories/topics

  // AI-enhanced fields (GROQ)
  qualityScore    Float?   // 0-100 score from GROQ
  optimizedTitle  String?
  summary         String?  @db.Text
  suggestedTags   String[] // AI-suggested tags
  engagementScore Float?   // Predicted engagement score

  // Metadata
  contentHash     String   @unique // For deduplication
  isProcessed     Boolean  @default(false)
  isModerated     Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  feed            Feed     @relation(fields: [feedId], references: [id], onDelete: Cascade)
  drafts          Draft[]

  @@index([feedId])
  @@index([publishedAt])
  @@index([isProcessed])
  @@map("content")
}

// Draft posts for social media
model Draft {
  id              String   @id @default(cuid())
  userId          String
  contentId       String?  // Optional link to source content

  // Draft content
  title           String
  body            String   @db.Text
  platform        String   // twitter, linkedin, etc.

  // Scheduling
  status          String   @default("draft") // draft, scheduled, published, failed
  scheduledFor    DateTime?
  publishedAt     DateTime?

  // Metadata
  isAIGenerated   Boolean  @default(false)
  metadata        Json?    // Additional platform-specific data
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  content         Content? @relation(fields: [contentId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([status])
  @@index([scheduledFor])
  @@map("drafts")
}

// Analytics and engagement tracking
model Analytics {
  id          String   @id @default(cuid())
  draftId     String
  platform    String
  impressions Int      @default(0)
  clicks      Int      @default(0)
  likes       Int      @default(0)
  shares      Int      @default(0)
  comments    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([draftId])
  @@map("analytics")
}

// Posted content tracking (to prevent duplicates)
model PostedContent {
  id          String   @id @default(cuid())
  userId      String
  contentId   String
  platform    String
  draftId     String?
  postedAt    DateTime @default(now())
  postUrl     String?  // URL to the posted content on social media
  status      String   @default("success") // success, failed
  error       String?  // Error message if failed
  createdAt   DateTime @default(now())

  @@unique([userId, contentId, platform])
  @@index([userId])
  @@index([contentId])
  @@index([postedAt])
  @@map("posted_content")
}
